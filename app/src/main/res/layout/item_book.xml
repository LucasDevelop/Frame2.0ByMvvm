<?xml version="1.0" encoding="utf-8"?>
<com.luan.base.widget.ShadowGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:shadowRadius="15dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:paddingTop="13dp"
        android:paddingRight="23dp"
        android:paddingBottom="13dp">

        <ImageView
            android:id="@+id/v_icon"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@drawable/shape_def_img_circle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/v_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Lan Chen"
            android:textColor="#ff575757"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@id/v_level"
            app:layout_constraintLeft_toRightOf="@id/v_icon"
            app:layout_constraintTop_toTopOf="@id/v_icon"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/v_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Master Degree"
            android:textColor="#ff575757"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/v_years"
            app:layout_constraintLeft_toRightOf="@id/v_icon"
            app:layout_constraintTop_toBottomOf="@id/v_name" />

        <TextView
            android:id="@+id/v_years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="5 years teacher.."
            android:textColor="#ff575757"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/v_icon"
            app:layout_constraintLeft_toRightOf="@id/v_icon"
            app:layout_constraintTop_toBottomOf="@id/v_level" />

        <RatingBar
            android:id="@+id/v_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:isIndicator="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/v_book_bt"
            android:layout_width="82dp"
            android:layout_height="26dp"
            android:background="@drawable/shape_stroke_blue_cf"
            android:gravity="center"
            android:text="Book"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.luan.base.widget.ShadowGroup>