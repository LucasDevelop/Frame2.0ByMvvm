<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/v_img1"
        android:layout_width="0dp"
        app:layout_constraintRight_toLeftOf="@id/v_img2"
        android:layout_marginRight="15dp"
        android:layout_height="72dp"
        android:src="@drawable/shape_def_img_c8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HSK 6   Lesson 8"
        android:layout_marginBottom="4dp"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/v_img1"
        app:layout_constraintEnd_toEndOf="@id/v_img1"
        app:layout_constraintStart_toStartOf="@id/v_img1" />

    <ImageView
        android:id="@+id/v_img2"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintLeft_toRightOf="@id/v_img1"
        android:src="@drawable/shape_def_img_c8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HSK 6   Lesson 8"
        android:layout_marginBottom="4dp"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/v_img2"
        app:layout_constraintEnd_toEndOf="@id/v_img2"
        app:layout_constraintStart_toStartOf="@id/v_img2" />
</androidx.constraintlayout.widget.ConstraintLayout>