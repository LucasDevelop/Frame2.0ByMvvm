<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/v_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday   07/15   7:30PM"
        android:textColor="#ff000000"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HSK 6   Lesson 10"
        android:textColor="#ff000000"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_time" />
    <View
        app:layout_constraintTop_toBottomOf="@id/v_class_name"
        app:layout_constraintStart_toStartOf="@id/v_class_name"
        app:layout_constraintEnd_toEndOf="@id/v_class_name"
        android:layout_width="0dp"
        android:background="@color/black"
        android:layout_height="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>