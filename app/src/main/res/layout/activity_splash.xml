<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".ui.welcome.SplashActivity">
    <VideoView
        android:id="@+id/v_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/v_splash_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="36dp"
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_splash_top"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/v_lang"
        android:drawableRight="@mipmap/ic_dwon"
        android:drawablePadding="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toTopOf="@id/v_splash_top"
        app:layout_constraintBottom_toBottomOf="@id/v_splash_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/english"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/v_register"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"
        android:text="@string/learn_chinese_anytime_anywhere"
        android:textColor="#ffffffff"
        android:textSize="32sp"
        android:shadowColor="#80000000"
        android:shadowDx="1"
        android:shadowDy="4"
        android:shadowRadius="3.0"
        />

    <TextView
        android:id="@+id/v_register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/v_login"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="24dp"
        android:text="Register"
        style="@style/btFull"/>

    <TextView
        android:id="@+id/v_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="35dp"
        android:text="Login"
        style="@style/btStroke"/>
</androidx.constraintlayout.widget.ConstraintLayout>