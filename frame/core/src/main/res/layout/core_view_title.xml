<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/core_title_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/base_v_back"
        android:layout_width="@dimen/core_title_height"
        android:layout_height="@dimen/core_title_height"
        android:padding="12dp"
        android:src="@mipmap/core_back" />

    <TextView
        android:id="@+id/base_v_title"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/base_v_right_container"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_height="match_parent"/>
</RelativeLayout>